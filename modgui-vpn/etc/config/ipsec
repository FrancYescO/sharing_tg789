config ipsec
	option debug '1'
	option rtinstall_enabled '0'
	list interface 'wan'

config tunnel 'grehotspot'
	option local_subnet '%dynamic[gre]'
	option remote_subnet '%dynamic[gre]'
	option local_sourceip '%config4'
	option ikelifetime '1440m'
	option lifetime '60m'
	option dpdaction 'hold'
	option dpddelay '0'
	option local_updown '/etc/ipsec-updown-gre-nat'
	option crypto_proposal 'g_aes128_sha256_modp3072 g_aes128_sha1_modp1024'

config crypto_proposal 'g_aes128_sha1_modp1024'
	option encryption_algorithm 'aes128'
	option hash_algorithm 'sha1'
    option dh_group 'modp1024'

config crypto_proposal 'g_3des_sha1_modp1024'
    option encryption_algorithm '3des'
    option hash_algorithm 'sha1'
    option dh_group 'modp1024'

config crypto_proposal 'g_aes128_sha256_modp3072'
	option encryption_algorithm 'aes128'
	option hash_algorithm 'sha256'
    option dh_group 'modp3072'

config crypto_proposal 'g_3des_sha256_modp3072'
    option encryption_algorithm '3des'
    option hash_algorithm 'sha256'
    option dh_group 'modp3072'

config remote 'l2tp'
	option enabled '0'
	option gateway 'any'
	option authentication_method 'psk'
	option pre_shared_key ''
	list transport 'server'
	option crypto_proposal 'g_3des_sha256_modp3072 g_aes128_sha256_modp3072 g_3des_sha1_modp1024 g_aes128_sha1_modp1024'

config transport 'server'
	option enabled '1'
	option mode 'add'
	option local_subnet '0.0.0.0/0[udp/l2tp]'
	option remote_subnet '0.0.0.0/0[udp/%any]'
	option local_firewall 'yes'
	option ikelifetime '60m'
	option lifetime '60m'
	option dpdaction 'clear'
	option dpddelay '0'
	option keyexchange 'ike'
	option crypto_proposal 'g_aes128_sha256_modp3072 g_aes128_sha1_modp1024'

